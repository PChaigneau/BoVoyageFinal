@model BoVoyageFinal.Models.Voyage

@{
    ViewData["Title"] = "Create";
}

<div class="text-center">
    <h1>Créer un nouveau voyage</h1>
</div>

<div class="container-fluid p-4" style="background-color: #e3f2fd;">
    <h4>Voyage</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdDestination" class="control-label"></label>
                    <select asp-for="IdDestination" class="form-control" asp-items="ViewBag.IdDestination"></select>
                    <span asp-validation-for="IdDestination" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateDepart" class="control-label"></label>
                    <input asp-for="DateDepart" class="form-control" />
                    <span asp-validation-for="DateDepart" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateRetour" class="control-label"></label>
                    <input asp-for="DateRetour" class="form-control" />
                    <span asp-validation-for="DateRetour" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PlacesDispo" class="control-label"></label>
                    <input asp-for="PlacesDispo" class="form-control" min="1" />
                    <span asp-validation-for="PlacesDispo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrixHt" class="control-label"></label>
                    <input asp-for="PrixHt" class="form-control" />
                    <span asp-validation-for="PrixHt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reduction" class="control-label"></label>
                    <input asp-for="Reduction" class="form-control" />
                    <span asp-validation-for="Reduction" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descriptif" class="control-label"></label>
                    <textarea asp-for="Descriptif" class="form-control" ></textarea>
                    <span asp-validation-for="Descriptif" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Créer" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Retour à la liste des voyages</a>
    </div>

</div>
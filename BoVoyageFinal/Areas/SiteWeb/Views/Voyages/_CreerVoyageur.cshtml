@model BoVoyageFinal.Models.Voyageur

<form class="text-center border border-light p-5" action="#!" id="ajouterVoyageur">

    <p class="h4 mb-4">Ajouter un participant</p>

    <div class="form-row mb-4">
        <div class="col">
            <!-- Prénom -->
            <input type="text" id="defaultRegisterFormFirstName" class="form-control" placeholder="Prénom">
        </div>
        <div class="col">
            <!-- Nom -->
            <input type="text" id="defaultRegisterFormLastName" class="form-control" placeholder="Nom">
        </div>
    </div>

    <div class="form-row mb-4">
        <div class="col">
            <!-- Civilité -->
                <select class="form-control" id="exampleFormControlCivilite">
                    <option value="default"></option>
                    <option value="homme" >h</option>
                    <option value="femme">f</option>
                </select>
        </div>
        <div class="col">
            <!-- Date de naissance -->
            <input type="date" id="defaultRegisterFormBirthdate" class="form-control">
        </div>
    </div>    

    <!-- E-mail -->
    <input type="email" id="defaultRegisterFormEmail" class="form-control mb-4" placeholder="E-mail">

    <!-- Numéro de téléphone -->
    <input type="text" id="defaultRegisterPhonePassword" class="form-control" placeholder="Numéro de téléphone" aria-describedby="defaultRegisterFormPhoneHelpBlock">
    <small id="defaultRegisterFormPhoneHelpBlock" class="form-text text-muted mb-4">
        Optionnel - sera uniquement utilisé pour informer en cas d'urgence
    </small>

    <!-- Bouton Ajouter -->
    <button class="btn btn-info my-4 btn-block" type="submit">Ajouter</button>


    <hr>

</form>

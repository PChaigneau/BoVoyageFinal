@model BoVoyageFinal.Models.Voyage

@{
    ViewData["Title"] = "Details";
}

<h1>Details Voyage</h1>
<hr />
<div class="container">
    <div class="row">
        <div class="col-6">
            <img src="/pictures/@Model.IdDestinationNavigation.Photo.First().NomFichier" class="card-img-top" alt="...">
        </div>
        <div class="col-6">
            <h5>@Html.DisplayFor(model => model.IdDestinationNavigation.Nom)</h5>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateDepart)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateDepart)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateRetour)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateRetour)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PlacesDispo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PlacesDispo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PrixHt)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PrixHt)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Reduction)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Reduction)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descriptif)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descriptif)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdDestinationNavigation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdDestinationNavigation.Nom)
                </dd>
            </dl>
        </div>
    </div>
</div>

<div class="container mt-3">
    <a class="btn btn-primary" asp-action="Reserver" asp-route-id="@Model.Id">Réserver</a> |
    <a class="btn btn-primary" asp-action="Index">Retour à la liste des voyages</a>
</div>

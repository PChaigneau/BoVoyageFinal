@model BoVoyageFinal.Models.Voyage

@{
    ViewData["Title"] = "Details";
}

<div class="text-center">
    <h1>Details Voyage</h1>
</div>
<hr />
<div class="container-fluid p-4" style="background-color: #e3f2fd;">
    <div class="row">
        <div class="col-6">
            @if (Model.IdDestinationNavigation.Photo.Any())
            {
                <img src="/pictures/@Model.IdDestinationNavigation.Photo.First().NomFichier" class="card-img-top" alt="...">
            }
            else
            {
                <img src="/pictures/Default_Photo.jpg" class="card-img-top" alt="...">
            }
        </div>
        <div class="col-6">
            <h5 class="text-bold">@Html.DisplayFor(model => model.IdDestinationNavigation.Nom)</h5>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdDestinationNavigation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdDestinationNavigation.Nom)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateDepart)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateDepart)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateRetour)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateRetour)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PlacesDispo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PlacesDispo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PrixHt)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PrixHt)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Reduction)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Reduction)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descriptif)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descriptif)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdDestinationNavigation.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdDestinationNavigation.Description)
                </dd>
                <dd class="col-sm-10">
                    <a class="btn btn-primary" asp-action="BookIndex" asp-route-id="@Model.Id">Réserver</a> |
                    <a class="btn btn-primary" asp-action="Index">Retour à la liste des voyages</a>
                </dd>
            </dl>
        </div>
    </div>
</div>



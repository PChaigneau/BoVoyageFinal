@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div>
    <div class="container-fluid p-4" style="background-color: #e3f2fd;">
        <h4>@ViewData["Title"]</h4>

        <div class="row">
            <div class="col-12">
                <!-- <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p> -->
                <p>Votre compte contient des données personnelles que vous avez transmises. Cette page vous permet d'en télécharger ou de supprimer ces données.</p>
                <p>
                    <!-- <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong> -->
                    <strong>La suppression de ces données les supprimera définitivement de votre compte, ces données ne pourront être retrouvées</strong>
                </p>
            </div>
            
                <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
                    <button class="btn btn-primary" type="submit">Télécharger</button>
                </form> 
                <p>
                    <a id="delete" asp-page="DeletePersonalData" class="btn btn-primary">Supprimer</a>
                </p>
            
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
